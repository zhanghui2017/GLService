<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_baoxiu_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_e9eef4" >

    <LinearLayout
        android:id="@+id/tmp_line_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_main_voice_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/repair_but_voice" />

            <TextView
                android:layout_width="48dp"
                android:layout_height="17dp"
                android:layout_marginTop="5dp"
                android:text="语音通话"
                android:textColor="#ff666666"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_main_service_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/repair_but_service" />

            <TextView
                android:layout_width="48dp"
                android:layout_height="17dp"
                android:layout_marginTop="5dp"
                android:text="在线客服"
                android:textColor="#ff666666"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/main_close_baoxiu_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/but_close"
        android:visibility="invisible"/>


    <TextView
        android:layout_width="77dp"
        android:layout_height="15dp"
        android:layout_above="@+id/tmp_line_4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="选择保修方式："
        android:textColor="#ff999999"
        android:textSize="11sp" />

</RelativeLayout>
