<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gengli.glservice.fragment.MainFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">

            <RelativeLayout
                android:id="@+id/tmp_view_1"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="@color/color_e9eef4">

                <com.gengli.glservice.view.ImageSlideView
                    android:id="@+id/img_slider_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tmp_top_view"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="6dp">

                <LinearLayout
                    android:id="@+id/main_search_view_bt"
                    android:layout_width="300dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/shape_main_search"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_home_search_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="搜索你想找的服务、产品"
                        android:textColor="#ffe8e8e8"
                        android:textSize="14sp" />
                </LinearLayout>

                <!--<RelativeLayout-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_toRightOf="@+id/main_search_view_bt"-->
                    <!--android:paddingLeft="10dp">-->

                    <!--<ImageView-->
                        <!--android:id="@+id/main_fragment_message_bt"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:layout_marginRight="10dp"-->
                        <!--android:adjustViewBounds="true"-->
                        <!--android:scaleType="fitXY"-->
                        <!--android:src="@drawable/img_message_null" />-->
                <!--</RelativeLayout>-->
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/tmp_menu_view"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:layout_below="@id/tmp_view_1"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/main_zxbx_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_zxbx_button" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="在线报修"
                        android:textColor="@color/color_090909"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/main_wxd_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_wxd_button" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="维修单"
                        android:textColor="@color/color_090909"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/main_cjgz_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_cjgz_button" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="常见故障"
                        android:textColor="@color/color_090909"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/main_yjfk_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_yjfk_button" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="意见反馈"
                        android:textColor="@color/color_090909"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/tmp_main_line2"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@+id/tmp_menu_view"
                android:background="#E9EEF4" />


            <RelativeLayout
                android:id="@+id/tmp_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tmp_main_line2"
                android:layout_marginTop="20dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:background="#e9eef4" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@android:color/white"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="耿力头条"
                    android:textColor="#9E9E9E"
                    android:textSize="15sp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/tmp_rel_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tmp_list_view">

                <ListView
                    android:id="@+id/main_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:divider="#ffc6d3e2"
                    android:dividerHeight="1dp" />
            </RelativeLayout>

            <View
                android:id="@+id/tmp_line_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tmp_rel_4"
                android:background="#ffc6d3e2" />


            <TextView
                android:id="@+id/main_more_bt"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_below="@+id/tmp_line_3"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="80dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_main_more_bg"
                android:gravity="center"
                android:text="查看更多"
                android:textColor="#ffa6b5c7"
                android:textSize="10dp" />

        </RelativeLayout>
    </RelativeLayout>
</ScrollView>