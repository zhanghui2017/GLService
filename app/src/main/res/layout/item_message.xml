<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:background="@drawable/shape_item_category_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="81dp">

        <ImageView
            android:id="@+id/img_message"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:adjustViewBounds="true"
            android:paddingBottom="18dp"
            android:paddingTop="18dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_feed_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="11dp"
            android:layout_toRightOf="@+id/img_message"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_message_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="派单提醒"
                android:textColor="#090909"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/text_message_content"
                android:layout_width="250.5dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="李师傅您好，又有新的订单了，李师傅您好，又有新的订单了李师傅您好，又有新的订单了"
                android:textColor="#A7A7A7"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffc6d3e2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/message_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="2018-02-21 13:21"
            android:textColor="#ff94a9bd"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/message_show_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击查看"
                android:textColor="#ff94a9bd"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/item_pro_control_bt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:src="@drawable/my_but_spread" />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>